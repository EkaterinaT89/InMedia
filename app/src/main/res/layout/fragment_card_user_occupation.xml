<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="@dimen/padding"
    android:layout_margin="@dimen/margin"
    app:cardCornerRadius="@dimen/corner_radius"
    app:cardElevation="@dimen/elevation"
    tools:context=".fragment.CardUserOccupationFragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal"
        android:padding="@dimen/padding">

        <ImageView
            android:id="@+id/job_avatar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:contentDescription="@string/job_avatar"
            tools:src="@drawable/ic_outline_mode_comment_24" />

        <LinearLayout
            android:layout_width="250dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/margin"
            android:orientation="vertical">

            <TextView
                android:id="@+id/position"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="?attr/textFillColor"
                android:textSize="18sp"
                tools:text="Должность" />

            <TextView
                android:id="@+id/company"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="16sp"
                tools:text="Название фирмы" />

            <TextView
                android:id="@+id/company_location"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="16sp"
                tools:text="Россия" />

            <TextView
                android:id="@+id/company_city_location"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="14sp"
                tools:text="Москва, Россия" />

            <com.google.android.material.divider.MaterialDivider
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/margin" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <com.google.android.material.button.MaterialButton
                android:id="@+id/edit_button"
                style="@style/Widget.AppCompat.Button.Borderless"
                android:layout_width="wrap_content"
                android:layout_height="50dp"
                android:contentDescription="@string/edit_post"
                app:icon="@drawable/ic_baseline_more_horiz_24"
                app:iconGravity="end"
                app:iconSize="24dp"
                app:iconTint="?attr/colorControlNormal" />

            <com.google.android.material.button.MaterialButton
                android:id="@+id/get_job_details"
                style="@style/Widget.AppCompat.Button.Borderless"
                android:layout_width="wrap_content"
                android:layout_height="50dp"
                android:contentDescription="@string/get_job_details"
                app:icon="@drawable/ic_baseline_chevron_right_24"
                app:iconGravity="end"
                app:iconTint="?attr/colorControlNormal" />

        </LinearLayout>

    </LinearLayout>
</androidx.cardview.widget.CardView>